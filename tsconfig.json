{
  "exclude": ["node_modules", "dist", "prisma"],
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",

    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },

    "module": "nodenext",
    "moduleResolution": "nodenext",

    "target": "esnext",
    "types": ["node"],

    "declaration": true,
    "sourceMap": true,

    "strict": true,

    "verbatimModuleSyntax": true,
    "isolatedModules": false,
    "skipLibCheck": true
  }
}
